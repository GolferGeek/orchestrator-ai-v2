{
  "title": "Agent Orchestration Recipe",
  "type": "object",
  "required": ["slug", "display_name", "agent_slug", "orchestration", "prompt_templates"],
  "additionalProperties": false,
  "properties": {
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$"
    },
    "display_name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "agent_slug": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "draft"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "version": {
      "type": "string"
    },
    "orchestration": {
      "type": "object",
      "description": "Structured orchestration definition",
      "required": ["phases"],
      "properties": {
        "summary": { "type": "string" },
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "steps"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "steps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "action"],
                  "properties": {
                    "id": { "type": "string" },
                    "action": { "type": "string" },
                    "agent": { "type": "string" },
                    "depends_on": {
                      "type": "array",
                      "items": { "type": "string" },
                      "default": []
                    },
                    "deliverables": {
                      "type": "array",
                      "items": { "type": "string" },
                      "default": []
                    },
                    "human_checkpoint_id": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "checkpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "prompt_templates": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "required": ["name", "template"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "template": { "type": "string" },
          "modelProfile": { "type": "string" },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["key"],
              "properties": {
                "key": { "type": "string" },
                "label": { "type": "string" },
                "description": { "type": "string" },
                "required": { "type": "boolean", "default": true },
                "type": { "type": "string" },
                "enumValues": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "defaultValue": {}
              }
            }
          }
        }
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orchestrator.ai/schemas/plan-template.schema.json",
  "title": "Plan Template",
  "type": "object",
  "required": ["success_criteria", "phases"],
  "additionalProperties": false,
  "properties": {
    "success_criteria": { "type": "string", "minLength": 1 },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9_-]+$" },
          "description": { "type": "string", "minLength": 1 },
          "required_deliverables": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "human_checkpoints": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": { "type": "string" }
    },
    "fallback_strategies": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}

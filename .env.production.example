# =============================================================================
# ORCHESTRATOR AI - PRODUCTION ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this to .env.production and fill in your production values
# NEVER commit .env.production to git
# =============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=production

# =============================================================================
# PORT CONFIGURATION (Production uses 9xxx ports)
# =============================================================================
API_PORT=9000
WEB_PORT=9001
LANGGRAPH_PORT=9200
SERVER_PORT=9300

# =============================================================================
# SUPABASE PRODUCTION (Required)
# =============================================================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# VITE/FRONTEND CONFIGURATION
# =============================================================================
VITE_BASE_URL=https://app.yourdomain.com
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_API_NESTJS_BASE_URL=https://api.yourdomain.com
VITE_API_URL=https://api.yourdomain.com
VITE_HTTP_PORT=9001
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_ENABLE_ANALYTICS=true

# =============================================================================
# LLM PROVIDER API KEYS (Required - at least one)
# =============================================================================
# Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=sk-ant-your-production-key

# OpenAI
OPENAI_API_KEY=sk-proj-your-production-key

# Google (Gemini)
GOOGLE_API_KEY=your-production-key

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# N8N (if using)
N8N_HOST=your-n8n-host
N8N_PORT=5678
N8N_WEBHOOK_URL=https://n8n.yourdomain.com
N8N_API_KEY=your-n8n-api-key

# Firecrawl
FIRECRAWL_API_KEY=fc-your-key

# Helicone
HELICONE_API_KEY=sk-helicone-your-key

# LangSmith
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=orchestrator-ai-production
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-key

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
OBSERVABILITY_MODEL=claude-3-5-haiku-20241022
LOG_LEVEL=error

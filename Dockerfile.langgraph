# Dockerfile for LangGraph Workflow Engine (Production)
FROM node:20-alpine AS builder

WORKDIR /app

# Copy all package files for workspace resolution
COPY package*.json ./
COPY apps/transport-types/package*.json ./apps/transport-types/
COPY apps/langgraph/package*.json ./apps/langgraph/

# Install all dependencies (including dev for build)
RUN npm ci

# Copy source code
COPY apps/transport-types ./apps/transport-types
COPY apps/langgraph ./apps/langgraph

# Build transport types
WORKDIR /app/apps/transport-types
RUN npm run build

# Build LangGraph
WORKDIR /app/apps/langgraph
RUN npm run build

# Production stage - use single stage to avoid node_modules issues
FROM node:20-alpine

WORKDIR /app

# Copy the entire built application including node_modules
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/apps/transport-types ./apps/transport-types
COPY --from=builder /app/apps/langgraph ./apps/langgraph
COPY --from=builder /app/package*.json ./

# Expose port (default 6200, override via LANGGRAPH_PORT)
EXPOSE 6200

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:' + (process.env.LANGGRAPH_PORT || 6200) + '/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start LangGraph
WORKDIR /app/apps/langgraph
CMD ["node", "dist/main.js"]

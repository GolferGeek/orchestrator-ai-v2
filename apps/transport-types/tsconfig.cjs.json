{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/cjs",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "core/**/*.ts",
    "shared/**/*.ts",
    "request/**/*.ts",
    "response/**/*.ts",
    "modes/**/*.ts",
    "streaming/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
